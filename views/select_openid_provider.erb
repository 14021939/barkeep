<%#
  View params:
   - openid_providers: a list of OpenID provider URLs
 %>
<div id="selectOpenIdProvider">
  <h2>Select one of these services to login with:</h2>
  <ol>
    <% openid_providers.each_with_index do |provider_url, index| %>
      <li>
        <a href="/login/login_using_openid_provider?provider_id=<%= index %>">
          <%= URI.parse(provider_url).host %>
        </a>
      </li>
    <% end %>
  </ol>
</div>